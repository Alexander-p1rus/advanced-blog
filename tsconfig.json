{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
//    "baseUrl": "."
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "plugins": [{ "name": "typescript-plugin-css-modules" }],
    }
  }
}